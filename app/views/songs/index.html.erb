<section class="todoapp">

  <header class="header">
    <h1>Fav-songs</h1>

    <%= form_for(@song) do |f| %>

      <%= f.text_field :name, :class => "new-todo" %>
 
    <% end %>
  </header>


    <section class="main">
    <input class="toggle-all" type="checkbox">
    <label for="toggle-all">Mark all as complete</label>
      <ul class="todo-list">
        <% @songs.each do |song| %>
          
          <li>
            <div class="view">
              <input class="toggle" type="checkbox">
                <label><%= link_to song.name, song_path(song) %></label>
                  <button class="destroy"></button>
            </div>
          </li>
        
        <% end %>

      </ul>
    </section>
    


</section>